<% if @item.errors.present? %>
    <ul>
    <% @item.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
    <% end %>
    </ul>
<% end %>

<h2><%= @addtocart.name %></h2>
<p>価格：<%= @addtocart.price %></p>

<%= form_tag "/#{@addtocart.id}/addtocart", method: :post do %>
    <p><%= label_tag :数量 %><%= number_field_tag :quantity, min: 1 %></p>
    <%= submit_tag "商品をカートに追加する" %>
<% end %>
<%= link_to '戻る', root_path %>