<% if @product.errors.present? %>
    <ul>
    <% @product.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
    <% end %>
    </ul>
<% end %>

<%= form_tag "/addproduct", method: :post do %>
    <p><%= label_tag :名前 %><%= text_field_tag :name %></p>
    <p><%= label_tag :価格 %><%= number_field_tag :price, min: 0 %></p>
    <%= submit_tag "追加する" %>
<% end%>
<%= link_to '戻る', root_path %>